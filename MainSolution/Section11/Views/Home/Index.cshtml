@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        Welcome! @DateTime.Now.ToString() <b>Good</b> <br/>
        @{
            int a = 10, b = 20, c;
            c = a + b;

            int[] arr = {56, 78, 90, 45, 34};
        }
        <br/>Your result is @c.
