@model Section14.Models.DepartmentModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div>
    @using (@Html.BeginForm("Insert", "Home", FormMethod.Post))
    {
        <table>
            <tr>
                <td>Enter Department Name:</td>
                <td>@Html.TextBoxFor(x => x.Name)</td>
            </tr>
            <tr>
                <td>Enter HOD Name:</td>
                <td>@Html.TextBoxFor(x => x.HOD)</td>
            </tr>
            <tr>
                <td>Select Gender</td>
                <td>
                    @Html.RadioButtonFor(x => x.Gender, "M", true)<span>Male</span>
                    @Html.RadioButtonFor(x => x.Gender, "F", false)<span>Female</span>
                </td>
            </tr>
            <tr></tr>
            <tr>
                <td></td>
                <td>
                    <input id="Submit" type="submit" value="submit" />
                    <input id="Reset" type="reset" value="reset" />
                </td>

            </tr>
        </table>
    }
</div>

