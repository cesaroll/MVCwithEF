@model IEnumerable<S17_L68_AjaxActionLink.Models.Employee>

<p>
    @Html.ActionLink("Create New", "Create")
    @Ajax.ActionLink("AjaxCreate", "AjaxCreate", new AjaxOptions()
                            {
                                HttpMethod = "Get",
                                UpdateTargetId = "MyForm",
                                InsertionMode = InsertionMode.Replace
                            })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DOB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Ajax.ActionLink("AjaxDelete", "AjaxDelete", new { id = item.Id }, new AjaxOptions()
                            {
                                HttpMethod = "Get",
                                UpdateTargetId = "MyData",
                                InsertionMode = InsertionMode.Replace
                            })
        </td>
    </tr>
}

</table>
