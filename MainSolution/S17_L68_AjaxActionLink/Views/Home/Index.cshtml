
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <title>Index</title>
</head>
<body>
    <div>
        <marquee>Welcome to Ajax</marquee>

        <div id="MyDate">@{Html.RenderPartial("AjaxReload");}</div>

        @Html.ActionLink("Reload", "Index")

        @Ajax.ActionLink("Ajax Reload", "AjaxReload", new AjaxOptions()
        {
            HttpMethod = "Get", 
            UpdateTargetId = "MyDate", 
            InsertionMode = InsertionMode.Replace
        })
    </div>
</body>
</html>
